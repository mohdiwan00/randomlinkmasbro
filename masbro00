  <script>
    // Intersection Observer for Scroll Fade-In Animation
    document.addEventListener("DOMContentLoaded", () => {
      const elements = document.querySelectorAll('.fade-in-scroll');
      const observerOptions = { root: null, rootMargin: '0px', threshold: 0.1 };

      const observer = new IntersectionObserver((entries, obs) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
            obs.unobserve(entry.target);
          }
        });
      }, observerOptions);

      elements.forEach(el => observer.observe(el));

      // Prevent enter key from adding new lines in the single-line link textarea
      const linkInput = document.getElementById('link-input');
      linkInput.addEventListener('keydown', (e) => {
        if (e.key === 'Enter') e.preventDefault();
      });

      // Save/Copy link
      const saveBtn = document.getElementById('save-btn');
      const lastLinkKey = 'rlm_last_link';

      function setLastLink(url) {
        localStorage.setItem(lastLinkKey, url);
      }

      function getLastLink() {
        return localStorage.getItem(lastLinkKey) || '';
      }

      function copyToClipboard(text) {
        if (!text) return;
        navigator.clipboard?.writeText(text).catch(() => {});
      }

      // preload last saved link
      const last = getLastLink();
      if (last) linkInput.value = last;

      saveBtn.addEventListener('click', () => {
        const url = (linkInput.value || '').trim();
        if (!url) return;

        setLastLink(url);
        copyToClipboard(url);

        saveBtn.textContent = 'Saved & Copied âœ…';
        setTimeout(() => saveBtn.textContent = 'Save / Copy Link', 1200);
      });

      // Share panel actions
      document.querySelectorAll('[data-action]').forEach(btn => {
        btn.addEventListener('click', () => {
          const action = btn.getAttribute('data-action');
          const url = (linkInput.value || '').trim() || getLastLink();

          if (!url) {
            saveBtn.textContent = 'Paste a link first ğŸ˜†';
            setTimeout(() => saveBtn.textContent = 'Save / Copy Link', 1200);
            return;
          }

          if (action === 'copy') {
            copyToClipboard(url);
            saveBtn.textContent = 'Copied âœ…';
            setTimeout(() => saveBtn.textContent = 'Save / Copy Link', 1200);
            return;
          }

          if (action === 'print') {
            window.print();
            return;
          }

          if (action === 'email') {
            window.location.href = `mailto:?subject=${encodeURIComponent('RandomLinks')}&body=${encodeURIComponent(url)}`;
            return;
          }

          // social/message/more (basic fallback: use Web Share API if available)
          if (navigator.share) {
            navigator.share({ title: 'RandomLinks', text: 'Link', url }).catch(() => {});
          } else {
            copyToClipboard(url);
            saveBtn.textContent = 'Copied (no share) âœ…';
            setTimeout(() => saveBtn.textContent = 'Save / Copy Link', 1200);
          }
        });
      });
    });
  </script>
